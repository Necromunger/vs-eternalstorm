[
    // Add unique info behavior
    {
        "file": "game:itemtypes/wearable/seraph/neck",
        "op": "addmerge",
        "path": "/behaviorsByType",
        "value": {
            "*-temporal-sealed-tinbronze": [ {"name": "BehaviorTemporalNecklace"} ]
        }
    },

    // Add durability for each temporal amulet
    {
        "file": "game:itemtypes/wearable/seraph/neck",
        "op": "addmerge",
        "path": "/durabilityByType",
        "value": {
            "*-temporal-sealed-tinbronze": 100
        }
    },

    // Add each temporal amulet to the variant group
    {
        "file": "game:itemtypes/wearable/seraph/neck",
        "op": "addmerge",
        "path": "/variantgroups/1/states/-",
        "value": "gear-amulet-temporal-sealed-tinbronze"
    },

    // Add shape for each temporal amulet
    {
        "file": "game:itemtypes/wearable/seraph/neck",
        "op": "move",
        "path": "/temp",
        "frompath": "/shapeByType/*"
    },
    {
        "file": "game:itemtypes/wearable/seraph/neck",
        "op": "addmerge",
        "path": "/shapeByType/*-temporal-sealed-tinbronze",
        "value": {
            "base": "entity/humanoid/seraph/clothing/neck/gear-amulet-temporal-sealed-tinbronze"
        }
    },
    {
        "file": "game:itemtypes/wearable/seraph/neck",
        "op": "move",
        "path": "/shapeByType/*",
        "frompath": "/temp"
    },

    // Light HSV for amulet
    {
        "file": "game:itemtypes/wearable/seraph/neck",
        "op": "addmerge",
        "path": "/lightHsvByType/*-temporal-sealed-tinbronze",
        "value": [32, 4, 10]
    },

    // Add attributes for each temporal amulet
    {
        "file": "game:itemtypes/wearable/seraph/neck",
        "op": "move",
        "path": "/temp",
        "frompath": "/attributesByType/*"
    },
    {
        "file": "game:itemtypes/wearable/seraph/neck",
        "op": "addmerge",
        "path": "/attributesByType/*-temporal-sealed-tinbronze",
        "value": {
            "sanityRestorationAmount": 0.2
        }
    },
    {
        "file": "game:itemtypes/wearable/seraph/neck",
        "op": "move",
        "path": "/attributesByType/*",
        "frompath": "/temp"
    }
